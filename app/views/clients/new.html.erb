<% provide(:title, "Crear Cliente Nuevo") %>
<%= render 'layouts/sidebar' %>

<div id="page-content" class="inset"> 
  <div class="row">
    <div class="col-md-12">
      <h1>Crear Cliente Nuevo</h1>
      <%= semantic_form_for @client do |f|  %>
        <%= render 'shared/error_messages' %>
        <%= f.inputs do %>
          <%= f.input :name, :label => 'Nombre de Cliente', :input_html => { :class => 'form-control' } %>
          <%= f.input :fullname, :label => 'Razon Social', :input_html => { :class => 'form-control' } %>
          <%= f.input :ruc, :label => 'RUC', :input_html => { :class => 'form-control' } %>
          <%= f.input :tipo_contribuyente, :label => 'Tipo contribuyente', :input_html => { :class => 'form-control' } %>
          <%= f.input :legalrepresentative, :label => 'Representante Legal', :input_html => { :class => 'form-control' } %>
          <%= f.input :address, :label => 'Direccion', :input_html => { :class => 'form-control' } %>
          <%= f.input :web, :label => 'Sitio Web', :input_html => { :class => 'form-control' } %>
          <%= f.input :segmento, :label => 'Segmento', :input_html => { :class => 'form-control' } %>
        <% end %>
        <%= f.actions do %>
          <%= f.action :submit, :as => :button, :button_html => { :class => 'btn btn-default' } %>
          <%= f.action :cancel, :as => :link %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
